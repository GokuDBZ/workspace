<p>Form</p>
<ul>
  <%if  @article.errors.present?%>
    <%@article.errors.full_messages.each{|msg| %>
    
    <li><%= msg %></li>
    <%}%>
  <%end%>
  </ul>
<%=  form_for @article do |f|%>
    <%=  f.label :NAME%><br>
    <%=  f.text_field :name%>
    <br>
    <%=  f.label :DESCRIPTION%>
    <br>
    <%=  f.text_field :description%>
    <br>
    <%=  f.submit :submit%>
<%end%>