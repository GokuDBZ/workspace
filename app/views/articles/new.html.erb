  <div class="container">
    <div class="article_container">
    <h1 class="create">Create an Article</h1>
     
    <ul>
      <%if  @article.errors.present?%>
         <div class='alert alert-danger'>
            <a href="#" class="close" data-dismiss="alert">Ã—</a>
            <%@article.errors.full_messages.each{|msg| %>
              <li><%= msg %></li>
            <%}%>
        </div>
      <%end%>
    </ul>
    
    <div class='row'>  
      <div class="col-md-12">  
        <%=  form_for @article,:html=>{class: "form-horizontal",role:"form"} do |f|%>
          <div class="form-group">
            <div  class="col-sm-2 control-label">
              <%=  f.label :NAME%><br>
            </div>
            <div class="col-sm-4">
              <%=  f.text_field :name, class: "form-control",placeholder: "Name"%>
            </div>
          </div>  
            
          <div class="form-group">
            <div  class="col-sm-2 control-label">
                <%=  f.label :DESCRIPTION%>
            </div>
            
            <div class="col-sm-8">
               <%=  f.text_area :description, rows: 10, class: "form-control", placeholder: "Description"%>
            </div>
          </div>
          <div class="row">
            <div class="form-group">
             <div  class="col-sm-2 control-label">
                <%=  f.label :select_category%>
            </div>
            <div  class="col-sm-6 control-label">
                <%=  f.collection_check_boxes :category_ids, Category.all , :id, :name do |cb|%>
                  <% cb.label(class: "checkbox-inline set-inline") {cb.check_box(class: "checkbox") + cb.text} %>
                <%end%>
            </div>
            </div>
            </div>
            
          <div class="form-group">
            <div class="col-sm-10">
              <%=  f.submit :submit ,class: "btn btn-primary"%>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>  