
<%=stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'%>
<%=javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js'%>
<style>
    #games{
        background-color: #FAACA8;
        background-image: linear-gradient(19deg, #FAACA8 0%, #6e51c8 50%, #ffffff 100%);
        position:fixed;
        height:100%;
        width:100%;
    }
    #stars-frame, #answer-frame{
        float:left;
        width:40%;
        }
    #stars-frame .glyphicon{
        font-size: 1.75em;
        margin:0.3em;
    }
    
    #answer-frame .message_on_empty{
        color: #9b9b9b;
        font-size 0.5px;
    }
    
    #button-frame{
        width: 20%;
        float:left;
        text-align:center;
        margin-top: 50px;
    }
    #strars-frame .well,#answer-frame .well{
        min-height: 100px;
    }
    
    #numbers-frame .number, #answer-frame .well span{
        display: inline-block;
        background-color: #bbb;
        width:30px;
        margin:0.5em;
        text-align:center;
        font-size: 20px;
        border-radius: 50%;
        cursor: pointer;
        
    }
    #numbers-frame .disabled
    {
        cursor: not-allowed;
        background-color:#e8e8e8;
        color: #ddd;
        
    }
    #game{
        display:block;
        text-align: center;
        position:absolute;
        z-index:100;
    }
    #game h1{
        color: #FFE2AA;

        font-size: 60px;
        font-family: verdana;
    }
    
    #numbers-frame .used{
        color:cyan;
        background-color:green;
    }
    
    #button-frame .refresh{
        background-color: orange;
        width: 30px;
        height:25px;
        margin:6px;
    }
    
    
</style>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<span className="glyphicon glyphicon-ok"></span>
<%= react_component 'Game'%></li> </ul>
<div id="games">
</div>

